.main{
  position: fixed;
  display: flex;
  flex-direction:column;
  width: 100%;
  height: 100%;
  background-color: #f7f7f7;
}
.name{
  width: 92%;
  height: 100rpx;
  margin: 0 auto;
  margin-top: 2rpx;
  background-color: #ffffff;
}
.phone{
  width: 92%;
  height: 100rpx;
  margin: 0 auto;
  margin-top: 2rpx;
  background-color: #ffffff;
}
.QQ{
  width: 92%;
  height: 100rpx;
  margin: 0 auto;
  margin-top: 2rpx;
  background-color: #ffffff;
}
.yourWant{
  width: 92%;
  height: 240rpx;
  margin: 0 auto;
  margin-top: 2rpx;
  background-color: #ffffff;
}
input {
  line-height: 100rpx;
  height: 100rpx;
  margin-left: 40rpx;
  font-size: 32rpx;
  color: #282828;
}
textarea {
  padding-top: 30rpx;
  width: 88%;
  height: 240rpx;
  margin-left: 40rpx;
  font-size: 32rpx;
  color: #282828;
}
.place-holder{
  font-size: 32rpx;
  height: 100rpx;
  line-height: 100rpx;
  color: #999999;
}
.button{
  width: 92%;
  height: 100rpx;
  margin: 0 auto;
  margin-top: 40rpx;
  border-radius: 12px;
}
button{
  height: 100rpx;
  font-size: 32rpx;
  line-height: 100rpx;
  text-align: center;
  background-color: #e04e4e;
  color: #ffffff;
}
.section {
  width: 92%;
  height: 100rpx;
  margin: 0 auto;
  margin-top: 30rpx;
  background-color: #fff;
  line-height: 90rpx;
}
.label-1, .label-2{
    margin-bottom: 15px;
    width: 25%;
    display: block;
    margin-left: 20rpx;
    float: left;
    text-align: center;
}
.label-1__text, .label-2__text {
    display: inline-block;
    vertical-align: middle;
    font-size: 32rpx;
    color: #666666;
}
.label-2__text text{
  vertical-align: middle;
}
.label-1__icon {
    position: relative;
    margin-right: 20rpx;
    display: inline-block;
    vertical-align: middle;
    width: 36rpx;
    height: 36rpx;
    background: #fcfff4;
}
.label-1__icon-checked {
    position: absolute;
    top: 6rpx;
    left: 6rpx;
    width: 24rpx;
    height: 24rpx;
    background: #1aad19;
}
.label-2__icon {
    position: relative;
    display: inline-block;
    vertical-align: middle;
    margin-right: 20rpx;
    width: 36rpx;
    height: 36rpx;
    background: #fcfff4;
    border-radius: 100rpx;
    
}
.label-2__icon-checked {
    position: absolute;
    left: 6rpx;
    top: 6rpx;
    width: 24rpx;
    height: 24rpx;
    background: #ff3c00;
    border-radius: 50%;
}
.label-4_text{
    text-align: center;
    margin-top: 30rpx;
}